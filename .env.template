# Document Filer Configuration Template
# Copy this file to .env and fill in your API keys and preferences

# API Provider Selection (choose one: claude, openai, gemini)
VLM_PROVIDER=claude

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Model Selection
CLAUDE_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4o
GEMINI_MODEL=gemini-2.0-flash-exp

# Image Processing Settings
# DPI for image conversion (higher = better quality but larger file size)
IMAGE_DPI=300

# Maximum image dimension (width or height) in pixels
MAX_IMAGE_DIMENSION=2048

# Number of pages to extract from PDFs (first, middle, last)
PDF_PAGES_TO_EXTRACT=3

# File Organization Settings
# Source directory - where your organized documents live (for context generation)
SOURCE_DIR=~/Documents

# Default destination base path (leave empty to use source folder)
DEFAULT_DEST_BASE=

# Logging
LOG_LEVEL=INFO
